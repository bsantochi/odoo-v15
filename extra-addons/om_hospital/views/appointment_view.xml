<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'done'" sample="1" multi_edit="1">
                <field name="patient_id"/>
                <field name="ref" optional="hide"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="gender" optional="hide"/>
                <field name="appointment_time"/>
                <field name="booking_date" optional="show"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_consultation'"
                       decoration-danger="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_in_consultation" string="In Consultation" type="object"
                            states="draft" class="oe_highlight"/>
                    <button name="action_done" string="Mark as Done" type="object"
                            states="in_consultation, cancel" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            states="draft,in_consultation"/>
                    <button name="action_draft" string="Back to draft" type="object"
                            states="cancel"/>
                     <!--options="{'clickable': '1'}"-->
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,in_consultation,done" nolabel="1" />

                </header>
                <sheet>
                    <div class="oe_title">
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="booking_date" help="Date of booking" default_focus="1"/>
                        </group>
                        <group>
                            <field name="appointment_time"/>
                            <button name="action_test" string="Object Button" type="object"
                                    class="oe_highlight" confirm="Are you sure?"/>
                            <button name="%(om_hospital.action_hospital_patient)d"
                                    string="Action Button"
                                    help="On clicking this you will be redirect to patient records"
                                    confirm="Are you sure to open the patient action ?"
                                    type="action"
                                    class="oe_highlight"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder="Enter your prescription"
                                   options="{'collaborative': true, 'resizable': true}"/>
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'open_attachments': True}"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment !
            </p>
        </field>
    </record>

    <menuitem
        id="menu_appointment"
        name="Appointments"
        action="action_hospital_appointment"
        parent="menu_appointment_master"
        sequence="10" />
</odoo>